<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:orientation="horizontal">


    <ImageView
        android:id="@+id/img_tl"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="3dp"
        android:src="@drawable/toi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_weight="3">
           <TextView
               android:layout_marginLeft="8dp"
               android:id="@+id/txt_id_tl"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="id"
               android:textSize="14sp"
               android:textStyle="italic" />

           <TextView
               android:layout_weight="2"
               android:layout_marginLeft="12dp"
               android:id="@+id/txt_name_tl"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="4dp"
               android:text="Name"
               android:textSize="15sp"
               android:textStyle="bold" />
       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:id="@+id/txt_created_at_tl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="created_at"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txt_updated_at_tl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="updated_at"
                android:textSize="10sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>